{
  "version": "0.2.0",
  "configurations": [
    {
      //"debugServer": 4711, // Uncomment for debugging the adapter
      "name": "php dev 9001",
      "type": "php",
      "request": "launch",
      "port": 9001,
      "log": false,
      "stopOnEntry": false,
      "pathMappings":
      {
        "/var/www/site/": "${workspaceRoot}"
      },
    },
  {
      "name": "listen CLI",
      "type": "php",
      "request": "launch",
      "port": 9000
  },
  {
      "name": "run CLI",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
  }
]
}